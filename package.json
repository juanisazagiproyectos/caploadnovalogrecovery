{
    "name": "caploadnovalog",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/audit-logging": "^5",
        "@sap/cds": "^6",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3",
        "debug": "^4.3",
        "express": "^4",
        "hdb": "^0.19.0",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.13",
        "@types/passport": "^1.0.11",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-uimonitorloadnovalog": "cds watch --open uimonitorloadnovalog/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy caploadnovalog --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-uimonitorloaddatanovalog": "cds watch --open uimonitorloaddatanovalog/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-uimonitorstatusnovalog": "cds watch --open uimonitorstatusnovalog/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-uimonitormodenovalog": "cds watch --open uimonitormodenovalog/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "manager@tester.com": {
                            "password": "Rojovivo139!",
                            "ID": "marcos.quito@giproyectos.com",
                            "roles": [
                                "NovalogManagerALL"
                            ]
                        },
                        "viewer@tester.com": {
                            "password": "initial",
                            "ID": "viewer@tester.com",
                            "roles": [
                                "NovalogViewer"
                            ]
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana-cloud"
                },
                "[development]": {
                    "kind": "sql"
                },
                "model": [
                    "db",
                    "srv"
                ]
            }
        }
    },
    "sapux": [
        "app/uimonitorloadnovalog",
        "app/uimonitorloaddatanovalog",
        "app/uimonitorstatusnovalog",
        "app/uimonitormodenovalog"
    ]
}